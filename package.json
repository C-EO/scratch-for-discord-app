{
  "name": "scratch-for-discord",
  "version": "1.1.5",
  "main": "src/index.js",
  "description": "Build your own discord bot with scratch blocks.",
  "scripts": {
    "dev": "electron .",
    "format": "prettier --write **/*.{js,ts,yml,yaml,md,json,html,css}",
    "app:publish": "yarn build:app --publish=always",
    "build:app": "rimraf builds/app && electron-builder --x64 --config=builder.js"
  },
  "license": "MIT",
  "dependencies": {
    "discord-rpc": "^3.1.4",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "electron": "^12.0.9",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevSnowflake/scratch-for-discord-app.git"
  },
  "keywords": [
    "scratch",
    "discord",
    "bot"
  ],
  "author": "Scratch For Discord",
  "bugs": {
    "url": "https://github.com/DevSnowflake/scratch-for-discord-app/issues"
  },
  "homepage": "https://github.com/DevSnowflake/scratch-for-discord-app#readme"
}
